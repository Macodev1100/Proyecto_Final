@model P_F.Models.Entities.Repuesto

@{
    ViewData["Title"] = "Nuevo Repuesto";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex align-items-center justify-content-between mb-4">
                <div>
                    <h1 class="h3 mb-0 text-gray-800">
                        <i class="fas fa-plus-circle me-2"></i>@ViewData["Title"]
                    </h1>
                    <p class="mb-0 text-muted">Registrar nuevo repuesto en el inventario</p>
                </div>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Volver
                </a>
            </div>

            <div class="card shadow">
                <div class="card-header">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-cog me-2"></i>Información del Repuesto
                    </h6>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Nombre" class="form-label">Nombre del Repuesto</label>
                                    <input asp-for="Nombre" class="form-control" placeholder="Ej: Filtro de aceite" />
                                    <span asp-validation-for="Nombre" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Codigo" class="form-label">Código del Repuesto</label>
                                    <input asp-for="Codigo" class="form-control" placeholder="Ej: FO-001" />
                                    <span asp-validation-for="Codigo" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group mb-3">
                                    <label asp-for="Descripcion" class="form-label">Descripción</label>
                                    <textarea asp-for="Descripcion" class="form-control" rows="3" placeholder="Descripción detallada del repuesto..."></textarea>
                                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="PrecioVenta" class="form-label">Precio Unitario (Q)</label>
                                    <div class="input-group">
                                        <span class="input-group-text">Q</span>
                                        <input asp-for="PrecioVenta" class="form-control" type="number" step="0.01" min="0" placeholder="0.00" />
                                    </div>
                                    <span asp-validation-for="PrecioVenta" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="StockActual" class="form-label">Stock Inicial</label>
                                    <input asp-for="StockActual" class="form-control" type="number" min="0" placeholder="0" />
                                    <span asp-validation-for="StockActual" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="StockMinimo" class="form-label">Stock Mínimo</label>
                                    <input asp-for="StockMinimo" class="form-control" type="number" min="0" placeholder="0" />
                                    <span asp-validation-for="StockMinimo" class="text-danger"></span>
                                    <small class="form-text text-muted">Cantidad mínima antes de alertar de stock bajo</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Proveedor" class="form-label">Proveedor</label>
                                    <input asp-for="Proveedor" class="form-control" placeholder="Nombre del proveedor" />
                                    <span asp-validation-for="Proveedor" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Ubicacion" class="form-label">Ubicación en Almacén</label>
                                    <input asp-for="Ubicacion" class="form-control" placeholder="Ej: Estante A-3" />
                                    <span asp-validation-for="Ubicacion" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check mt-4 pt-2">
                                    <input asp-for="Activo" class="form-check-input" type="checkbox" checked />
                                    <label asp-for="Activo" class="form-check-label">
                                        Repuesto Activo
                                    </label>
                                    <small class="form-text text-muted">Marcar si el repuesto está disponible para uso</small>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4">

                        <div class="form-group text-end">
                            <a asp-action="Index" class="btn btn-secondary me-2">
                                <i class="fas fa-times me-1"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>Guardar Repuesto
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-12">
        <div class="card border-left-info">
            <div class="card-body">
                <h6 class="text-info">
                    <i class="fas fa-info-circle me-2"></i>Información sobre Repuestos
                </h6>
                <ul class="mb-0 small">
                    <li>El código del repuesto debe ser único en el sistema</li>
                    <li>El stock mínimo ayuda a generar alertas automáticas cuando sea necesario reabastecer</li>
                    <li>Los repuestos marcados como "Inactivos" no aparecerán en las órdenes de trabajo</li>
                    <li>La ubicación en almacén facilita la localización rápida del repuesto</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}