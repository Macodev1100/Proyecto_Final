@model P_F.Models.Entities.OrdenTrabajo

@{
    ViewData["Title"] = "Nueva Orden de Trabajo";
}

<div class="container-fluid">
    <!-- Encabezado -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="text-primary">
                    <i class="fas fa-clipboard-list me-2"></i>Nueva Orden de Trabajo
                </h2>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Volver al Listado
                </a>
            </div>
        </div>
    </div>

    <!-- Formulario -->
    <div class="card">
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="row">
                    <!-- Información del Cliente -->
                    <div class="col-md-6">
                        <h5 class="text-secondary mb-3">
                            <i class="fas fa-user me-2"></i>Información del Cliente
                        </h5>
                        
                        <div class="mb-3">
                            <label asp-for="ClienteId" class="form-label">Cliente</label>
                            <select asp-for="ClienteId" class="form-select" asp-items="ViewBag.Clientes">
                                <option value="">Seleccione un cliente...</option>
                            </select>
                            <span asp-validation-for="ClienteId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="VehiculoId" class="form-label">Vehículo</label>
                            <select asp-for="VehiculoId" class="form-select" disabled>
                                <option value="">Primero seleccione un cliente</option>
                            </select>
                            <span asp-validation-for="VehiculoId" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Información de la Orden -->
                    <div class="col-md-6">
                        <h5 class="text-secondary mb-3">
                            <i class="fas fa-cogs me-2"></i>Información de la Orden
                        </h5>
                        
                        <div class="mb-3">
                            <label asp-for="NumeroOrden" class="form-label">Número de Orden</label>
                            <input asp-for="NumeroOrden" class="form-control" readonly value="@($"ORD-{DateTime.Now:yyyyMMdd}-{DateTime.Now.Ticks.ToString().Substring(10)}")">
                            <span asp-validation-for="NumeroOrden" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="FechaIngreso" class="form-label">Fecha de Ingreso</label>
                                    <input asp-for="FechaIngreso" type="datetime-local" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")">
                                    <span asp-validation-for="FechaIngreso" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="FechaPromesaEntrega" class="form-label">Fecha Promesa Entrega</label>
                                    <input asp-for="FechaPromesaEntrega" type="datetime-local" class="form-control">
                                    <span asp-validation-for="FechaPromesaEntrega" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mt-4">
                    <!-- Descripción del Problema -->
                    <div class="col-md-6">
                        <h5 class="text-secondary mb-3">
                            <i class="fas fa-exclamation-triangle me-2"></i>Descripción del Problema
                        </h5>
                        
                        <div class="mb-3">
                            <label asp-for="DescripcionProblema" class="form-label">Descripción del Problema</label>
                            <textarea asp-for="DescripcionProblema" class="form-control" rows="4" placeholder="Describa el problema reportado por el cliente..."></textarea>
                            <span asp-validation-for="DescripcionProblema" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ObservacionesCliente" class="form-label">Observaciones del Cliente</label>
                            <textarea asp-for="ObservacionesCliente" class="form-control" rows="3" placeholder="Observaciones adicionales del cliente..."></textarea>
                            <span asp-validation-for="ObservacionesCliente" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Asignación y Prioridad -->
                    <div class="col-md-6">
                        <h5 class="text-secondary mb-3">
                            <i class="fas fa-user-cog me-2"></i>Asignación y Prioridad
                        </h5>
                        
                        <div class="mb-3">
                            <label asp-for="EmpleadoAsignadoId" class="form-label">Mecánico Asignado</label>
                            <select asp-for="EmpleadoAsignadoId" class="form-select" asp-items="ViewBag.Mecanicos">
                                <option value="">Seleccione un mecánico...</option>
                            </select>
                            <span asp-validation-for="EmpleadoAsignadoId" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Prioridad" class="form-label">Prioridad</label>
                                    <select asp-for="Prioridad" class="form-select" asp-items="ViewBag.Prioridades">
                                        <option value="">Seleccione prioridad...</option>
                                    </select>
                                    <span asp-validation-for="Prioridad" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Estado" class="form-label">Estado Inicial</label>
                                    <select asp-for="Estado" class="form-select">
                                        <option value="0">Pendiente</option>
                                    </select>
                                    <span asp-validation-for="Estado" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

                <!-- Botones -->
                <div class="row mt-4">
                    <div class="col-12">
                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times me-1"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save me-1"></i>Crear Orden de Trabajo
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Cargar vehículos al seleccionar cliente
        $('#ClienteId').change(function() {
            var clienteId = $(this).val();
            var vehiculoSelect = $('#VehiculoId');
            
            vehiculoSelect.html('<option value="">Cargando vehículos...</option>').prop('disabled', true);
            
            if (clienteId) {
                $.get('/api/Clientes/vehiculos/' + clienteId, function(data) {
                    vehiculoSelect.html('<option value="">Seleccione un vehículo...</option>');
                    $.each(data, function(index, vehiculo) {
                        vehiculoSelect.append('<option value="' + vehiculo.vehiculoId + '">' + 
                                            vehiculo.nombreCompleto + '</option>');
                    });
                    vehiculoSelect.prop('disabled', false);
                }).fail(function() {
                    vehiculoSelect.html('<option value="">Error al cargar vehículos</option>');
                });
            } else {
                vehiculoSelect.html('<option value="">Primero seleccione un cliente</option>').prop('disabled', true);
            }
        });

        // Generar número de orden automáticamente
        if (!$('#NumeroOrden').val()) {
            var fecha = new Date();
            var numero = 'ORD-' + fecha.getFullYear() + 
                        String(fecha.getMonth() + 1).padStart(2, '0') + 
                        String(fecha.getDate()).padStart(2, '0') + '-' + 
                        String(fecha.getHours()).padStart(2, '0') + 
                        String(fecha.getMinutes()).padStart(2, '0');
            $('#NumeroOrden').val(numero);
        }
    </script>
}