@model P_F.Models.Entities.Empleado

@{
    ViewData["Title"] = "Nuevo Empleado";
}

<div class="container-fluid">
    <!-- Encabezado -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="text-primary">
                    <i class="fas fa-user-plus me-2"></i>Nuevo Empleado
                </h2>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Volver al Listado
                </a>
            </div>
        </div>
    </div>

    <!-- Formulario -->
    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="row">
                            <!-- Información Personal -->
                            <div class="col-md-6">
                                <h5 class="text-secondary mb-3">
                                    <i class="fas fa-user me-2"></i>Información Personal
                                </h5>
                                
                                <div class="mb-3">
                                    <label asp-for="Nombre" class="form-label">Nombre</label>
                                    <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre">
                                    <span asp-validation-for="Nombre" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Apellido" class="form-label">Apellido</label>
                                    <input asp-for="Apellido" class="form-control" placeholder="Ingrese el apellido">
                                    <span asp-validation-for="Apellido" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="DocumentoIdentidad" class="form-label">Documento de Identidad</label>
                                    <input asp-for="DocumentoIdentidad" class="form-control" placeholder="Número de documento">
                                    <span asp-validation-for="DocumentoIdentidad" class="text-danger"></span>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="Telefono" class="form-label">Teléfono</label>
                                            <input asp-for="Telefono" class="form-control" placeholder="Número de teléfono">
                                            <span asp-validation-for="Telefono" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="Email" class="form-label">Email</label>
                                            <input asp-for="Email" type="email" class="form-control" placeholder="correo@ejemplo.com">
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Direccion" class="form-label">Dirección</label>
                                    <textarea asp-for="Direccion" class="form-control" rows="3" placeholder="Dirección completa"></textarea>
                                    <span asp-validation-for="Direccion" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Información Laboral -->
                            <div class="col-md-6">
                                <h5 class="text-secondary mb-3">
                                    <i class="fas fa-briefcase me-2"></i>Información Laboral
                                </h5>
                                
                                <div class="mb-3">
                                    <label asp-for="TipoEmpleado" class="form-label">Tipo de Empleado</label>
                                    <select asp-for="TipoEmpleado" class="form-select">
                                        <option value="">Seleccione un tipo...</option>
                                        @foreach (var tipo in Enum.GetValues<P_F.Models.Entities.TipoEmpleado>())
                                        {
                                            <option value="@((int)tipo)">@tipo.ToString()</option>
                                        }
                                    </select>
                                    <span asp-validation-for="TipoEmpleado" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Especialidad" class="form-label">Especialidad</label>
                                    <input asp-for="Especialidad" class="form-control" placeholder="Ej: Motor, Transmisión, Electricidad">
                                    <span asp-validation-for="Especialidad" class="text-danger"></span>
                                    <small class="form-text text-muted">Especialmente importante para mecánicos</small>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="FechaContratacion" class="form-label">Fecha de Contratación</label>
                                    <input asp-for="FechaContratacion" type="date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")">
                                    <span asp-validation-for="FechaContratacion" class="text-danger"></span>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="SalarioHora" class="form-label">Salario por Hora</label>
                                            <div class="input-group">
                                                <span class="input-group-text">$</span>
                                                <input asp-for="SalarioHora" type="number" step="0.01" class="form-control" placeholder="0.00">
                                            </div>
                                            <span asp-validation-for="SalarioHora" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="PorcentajeComision" class="form-label">% Comisión</label>
                                            <div class="input-group">
                                                <input asp-for="PorcentajeComision" type="number" step="0.01" min="0" max="100" class="form-control" placeholder="0.00">
                                                <span class="input-group-text">%</span>
                                            </div>
                                            <span asp-validation-for="PorcentajeComision" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Observaciones" class="form-label">Observaciones</label>
                                    <textarea asp-for="Observaciones" class="form-control" rows="3" placeholder="Notas adicionales sobre el empleado"></textarea>
                                    <span asp-validation-for="Observaciones" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Botones -->
                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="d-flex justify-content-end gap-2">
                                    <a asp-action="Index" class="btn btn-secondary">
                                        <i class="fas fa-times me-1"></i>Cancelar
                                    </a>
                                    <button type="submit" class="btn btn-success">
                                        <i class="fas fa-save me-1"></i>Crear Empleado
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Panel de ayuda -->
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h6 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>Información de Ayuda
                    </h6>
                </div>
                <div class="card-body">
                    <h6>Tipos de Empleado:</h6>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-wrench text-primary me-2"></i><strong>Mecánico:</strong> Realiza reparaciones y mantenimiento</li>
                        <li><i class="fas fa-desk text-info me-2"></i><strong>Recepcionista:</strong> Atiende clientes y gestiona órdenes</li>
                        <li><i class="fas fa-user-tie text-warning me-2"></i><strong>Supervisor:</strong> Supervisa trabajos y personal</li>
                        <li><i class="fas fa-user-cog text-secondary me-2"></i><strong>Administrador:</strong> Gestión general del taller</li>
                    </ul>

                    <hr>

                    <h6>Recomendaciones:</h6>
                    <ul class="small">
                        <li>La especialidad es importante para mecánicos</li>
                        <li>El salario por hora se usa para cálculos de costos</li>
                        <li>La comisión se aplica sobre las ventas realizadas</li>
                        <li>Todos los campos marcados con * son obligatorios</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}