@model IEnumerable<P_F.Models.Entities.OrdenTrabajo>

@{
    ViewData["Title"] = "Órdenes por Estado";
}

<style>
    :root {
        --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        --success-gradient: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
        --warning-gradient: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        --info-gradient: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        --danger-gradient: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
        --card-shadow: 0 2px 15px rgba(0,0,0,0.08);
        --card-shadow-hover: 0 8px 30px rgba(0,0,0,0.12);
    }

    body {
        background: #f8f9fc;
    }

    .page-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 2rem;
        margin: -1rem -1rem 2rem -1rem;
        border-radius: 0 0 20px 20px;
        box-shadow: 0 4px 20px rgba(102, 126, 234, 0.3);
    }

    .page-header h1 {
        font-size: 1.75rem;
        font-weight: 700;
        margin: 0 0 0.5rem 0;
    }

    .page-header p {
        margin: 0;
        opacity: 0.9;
    }

    .filter-card {
        background: white;
        border-radius: 16px;
        padding: 1.5rem;
        box-shadow: var(--card-shadow);
        margin-bottom: 2rem;
        border: none;
    }

    .filter-card .card-title {
        font-size: 1.1rem;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .filter-card .card-title::before {
        content: '';
        width: 4px;
        height: 28px;
        background: var(--primary-gradient);
        border-radius: 4px;
    }

    .stat-card {
        background: white;
        border-radius: 16px;
        padding: 1.5rem;
        box-shadow: var(--card-shadow);
        transition: all 0.3s ease;
        height: 100%;
        border: none;
        position: relative;
        overflow: hidden;
    }

    .stat-card::before {
        content: '';
        position: absolute;
        left: 0;
        top: 0;
        bottom: 0;
        width: 4px;
        background: var(--primary-gradient);
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .stat-card:hover {
        transform: translateY(-5px);
        box-shadow: var(--card-shadow-hover);
    }

    .stat-card:hover::before {
        opacity: 1;
    }

    .stat-card.pendiente::before { background: var(--warning-gradient); }
    .stat-card.enproceso::before { background: var(--info-gradient); }
    .stat-card.completada::before { background: var(--success-gradient); }
    .stat-card.cancelada::before { background: var(--danger-gradient); }

    .stat-icon {
        width: 56px;
        height: 56px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        color: white;
        position: relative;
        overflow: hidden;
    }

    .stat-icon.pendiente { background: linear-gradient(135deg, #f6c23e, #f8d866); }
    .stat-icon.enproceso { background: linear-gradient(135deg, #36b9cc, #5bc0d4); }
    .stat-icon.completada { background: linear-gradient(135deg, #1cc88a, #36d9ac); }
    .stat-icon.cancelada { background: linear-gradient(135deg, #e74a3b, #ea6962); }

    .stat-icon::after {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        width: 0;
        height: 0;
        border-radius: 50%;
        background: radial-gradient(circle, rgba(255,255,255,0.3) 0%, transparent 70%);
        transform: translate(-50%, -50%);
        transition: width 0.6s ease, height 0.6s ease;
    }

    .stat-card:hover .stat-icon::after {
        width: 200%;
        height: 200%;
    }

    .stat-label {
        font-size: 0.8rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        color: #8492a6;
        margin-bottom: 0.5rem;
    }

    .stat-value {
        font-size: 2rem;
        font-weight: 700;
        color: #2c3e50;
        line-height: 1;
        margin-bottom: 0.5rem;
    }

    .stat-amount {
        font-size: 0.9rem;
        color: #1cc88a;
        font-weight: 600;
    }

    .chart-card {
        background: white;
        border-radius: 16px;
        padding: 1.5rem;
        box-shadow: var(--card-shadow);
        border: none;
    }

    .chart-header {
        font-size: 1.1rem;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 1.5rem;
        padding-bottom: 1rem;
        border-bottom: 2px solid #f1f3f5;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .progress-card {
        padding: 1rem 0;
        border-bottom: 1px solid #f1f3f5;
    }

    .progress-card:last-child {
        border-bottom: none;
    }

    .progress-label {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 0.5rem;
    }

    .progress-badge {
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 4px;
    }

    .progress-badge.pendiente { background: #fff3cd; color: #856404; }
    .progress-badge.enproceso { background: #d1ecf1; color: #0c5460; }
    .progress-badge.completada { background: #d4edda; color: #155724; }
    .progress-badge.cancelada { background: #f8d7da; color: #721c24; }

    .progress-percentage {
        font-weight: 700;
        color: #2c3e50;
    }

    .progress {
        height: 8px;
        border-radius: 10px;
        background: #f1f3f5;
        overflow: hidden;
    }

    .progress-bar {
        border-radius: 10px;
        transition: width 1s ease;
    }

    .progress-bar.bg-pendiente { background: linear-gradient(90deg, #f6c23e, #f8d866); }
    .progress-bar.bg-enproceso { background: linear-gradient(90deg, #36b9cc, #5bc0d4); }
    .progress-bar.bg-completada { background: linear-gradient(90deg, #1cc88a, #36d9ac); }
    .progress-bar.bg-cancelada { background: linear-gradient(90deg, #e74a3b, #ea6962); }

    .status-badge.bg-pendiente { background: #fff3cd; color: #856404; }
    .status-badge.bg-enproceso { background: #d1ecf1; color: #0c5460; }
    .status-badge.bg-completada { background: #d4edda; color: #155724; }
    .status-badge.bg-cancelada { background: #f8d7da; color: #721c24; }

    .table-card {
        background: white;
        border-radius: 16px;
        padding: 1.5rem;
        box-shadow: var(--card-shadow);
        border: none;
    }

    .table-card thead th {
        background: #f8f9fc;
        border: none;
        color: #6c757d;
        font-weight: 700;
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        padding: 1rem;
    }

    .table-card tbody td {
        border-color: #f1f3f5;
        padding: 1rem;
        vertical-align: middle;
    }

    .table-card tbody tr:hover {
        background: #f8f9fc;
    }

    .status-badge {
        padding: 6px 14px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }

    .status-badge::before {
        content: '';
        width: 8px;
        height: 8px;
        border-radius: 50%;
        display: inline-block;
    }

    .empty-state {
        background: white;
        border-radius: 16px;
        padding: 4rem 2rem;
        box-shadow: var(--card-shadow);
        text-align: center;
        border: none;
    }

    .empty-state-icon {
        font-size: 5rem;
        color: #e3e6f0;
        margin-bottom: 1.5rem;
    }

    .empty-state h3 {
        color: #2c3e50;
        font-weight: 700;
        margin-bottom: 1rem;
    }

    .empty-state p {
        color: #8492a6;
        margin-bottom: 2rem;
    }

    .btn-gradient {
        background: var(--primary-gradient);
        border: none;
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-gradient:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
        color: white;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .stat-card,
    .chart-card,
    .filter-card,
    .table-card {
        animation: fadeInUp 0.6s ease-out;
    }
</style>

<div class="container-fluid px-4">
    <!-- Header -->
    <div class="page-header">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1>
                    <i class="fas fa-tasks me-2"></i>@ViewData["Title"]
                </h1>
                <p>Análisis del estado de las órdenes de trabajo</p>
            </div>
            <a asp-action="Index" class="btn btn-light">
                <i class="fas fa-arrow-left me-1"></i>Volver
            </a>
        </div>
    </div>

    <!-- Filtros -->
    <div class="filter-card">
        <h5 class="card-title">
            <i class="fas fa-filter"></i>
            Filtros de Período
        </h5>
        <form method="get">
            <div class="row g-3">
                <div class="col-md-5">
                    <label for="fechaInicio" class="form-label fw-bold">Fecha Inicio</label>
                    <input type="date" name="fechaInicio" id="fechaInicio" class="form-control" value="@ViewBag.FechaInicio?.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-md-5">
                    <label for="fechaFin" class="form-label fw-bold">Fecha Fin</label>
                    <input type="date" name="fechaFin" id="fechaFin" class="form-control" value="@ViewBag.FechaFin?.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-gradient w-100">
                        <i class="fas fa-search me-1"></i>Filtrar
                    </button>
                </div>
            </div>
        </form>
    </div>

    <!-- Estadísticas por estado -->
    <div class="row mb-4">
        @if (ViewBag.OrdenesPorEstado != null)
        {
            @foreach (var estado in ViewBag.OrdenesPorEstado)
            {
                var estadoClass = estado.Estado.ToString().ToLower().Replace(" ", "");
                var iconClass = estado.Estado switch
                {
                    P_F.Models.Entities.EstadoOrden.Pendiente => "fa-clock",
                    P_F.Models.Entities.EstadoOrden.EnProceso => "fa-cogs",
                    P_F.Models.Entities.EstadoOrden.Completada => "fa-check-circle",
                    P_F.Models.Entities.EstadoOrden.Cancelada => "fa-times-circle",
                    _ => "fa-question-circle"
                };
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="stat-card @estadoClass">
                        <div class="d-flex align-items-center">
                            <div class="stat-icon @estadoClass">
                                <i class="fas @iconClass"></i>
                            </div>
                            <div class="ms-3 flex-grow-1">
                                <p class="stat-label">@estado.Estado</p>
                                <h3 class="stat-value">@(estado.Cantidad > 0 ? estado.Cantidad.ToString() : "Sin datos")</h3>
                                <p class="stat-amount mb-0">@(estado.TotalMonto > 0 ? "$" + estado.TotalMonto.ToString("N2") : "Sin datos")</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

    <!-- Estadísticas generales -->
    <div class="row mb-4">
        <div class="col-xl-6 col-md-6 mb-4">
            <div class="stat-card">
                <div class="d-flex align-items-center">
                    <div class="stat-icon" style="background: linear-gradient(135deg, #667eea, #764ba2);">
                        <i class="fas fa-clipboard-list"></i>
                    </div>
                    <div class="ms-3 flex-grow-1">
                        <p class="stat-label">Total Órdenes</p>
                        <h3 class="stat-value">@(ViewBag.TotalOrdenes != null && ViewBag.TotalOrdenes > 0 ? ViewBag.TotalOrdenes.ToString() : "Sin datos")</h3>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-6 col-md-6 mb-4">
            <div class="stat-card">
                <div class="d-flex align-items-center">
                    <div class="stat-icon completada">
                        <i class="fas fa-dollar-sign"></i>
                    </div>
                    <div class="ms-3 flex-grow-1">
                        <p class="stat-label">Monto Total</p>
                        <h3 class="stat-value">@(ViewBag.MontoTotal != null && ViewBag.MontoTotal > 0 ? "$" + ViewBag.MontoTotal.ToString("N2") : "Sin datos")</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Gráfico de distribución -->
    <div class="row mb-4">
        <div class="col-xl-8 mb-4">
            <div class="chart-card">
                <h5 class="chart-header">
                    <i class="fas fa-chart-pie"></i>
                    Distribución por Estado
                </h5>
                <div style="position: relative; height: 350px;">
                    <canvas id="estadosChart"></canvas>
                </div>
            </div>
        </div>
        <div class="col-xl-4 mb-4">
            <div class="chart-card">
                <h5 class="chart-header">
                    <i class="fas fa-chart-bar"></i>
                    Resumen Porcentual
                </h5>
                @if (ViewBag.OrdenesPorEstado != null)
                {
                    @foreach (var estado in ViewBag.OrdenesPorEstado)
                    {
                        var porcentaje = ViewBag.TotalOrdenes > 0 ? (estado.Cantidad * 100.0 / ViewBag.TotalOrdenes) : 0;
                        var estadoClass = estado.Estado.ToString().ToLower().Replace(" ", "");
                        <div class="progress-card">
                            <div class="progress-label">
                                <span class="progress-badge @estadoClass">
                                    <i class="fas fa-circle"></i>
                                    @estado.Estado
                                </span>
                                <span class="progress-percentage">@(porcentaje > 0 ? porcentaje.ToString("F1") + "%" : "Sin datos")</span>
                            </div>
                            <div class="progress">
                                <div class="progress-bar bg-@estadoClass" role="progressbar" style="width: @porcentaje.ToString("F1")%"></div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>

    <!-- Tabla de órdenes -->
    @if (Model.Any())
    {
        <div class="table-card">
            <h5 class="chart-header mb-4">
                <i class="fas fa-table"></i>
                Órdenes de Trabajo Recientes
            </h5>
            <div class="table-responsive">
                <table class="table table-hover" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Número</th>
                                        <th>Cliente</th>
                                        <th>Vehículo</th>
                                        <th>Empleado</th>
                                        <th>Fecha Ingreso</th>
                                        <th>Estado</th>
                                        <th>Total</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var orden in Model)
                                    {
                                        var badgeClass = orden.Estado switch
                                        {
                                            P_F.Models.Entities.EstadoOrden.Pendiente => "warning",
                                            P_F.Models.Entities.EstadoOrden.EnProceso => "info",
                                            P_F.Models.Entities.EstadoOrden.Completada => "success",
                                            P_F.Models.Entities.EstadoOrden.Cancelada => "danger",
                                            _ => "secondary"
                                        };
                                        <tr>
                                            <td>
                                                <strong>@(string.IsNullOrEmpty(orden.NumeroOrden) ? "Sin datos" : orden.NumeroOrden)</strong>
                                            </td>
                                            <td>
                                                <div>
                                                    <strong>@((orden.Cliente != null && !string.IsNullOrEmpty(orden.Cliente.Nombre)) ? orden.Cliente.Nombre : "Sin datos") @((orden.Cliente != null && !string.IsNullOrEmpty(orden.Cliente.Apellido)) ? orden.Cliente.Apellido : "")</strong>
                                                    @if (!string.IsNullOrEmpty(orden.Cliente?.DocumentoIdentidad))
                                                    {
                                                        <br><small class="text-muted">@(!string.IsNullOrEmpty(orden.Cliente?.DocumentoIdentidad) ? orden.Cliente.DocumentoIdentidad : "Sin datos")</small>
                                                    }
                                                </div>
                                            </td>
                                            <td>
                                                @if (orden.Vehiculo != null)
                                                {
                                                    <div>
                                                        <strong>@((orden.Vehiculo != null && !string.IsNullOrEmpty(orden.Vehiculo.Marca)) ? orden.Vehiculo.Marca : "Sin datos") @((orden.Vehiculo != null && !string.IsNullOrEmpty(orden.Vehiculo.Modelo)) ? orden.Vehiculo.Modelo : "")</strong>
                                                        <br><small class="text-muted">@(!string.IsNullOrEmpty(orden.Vehiculo?.Placa) ? orden.Vehiculo.Placa : "Sin datos")</small>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No asignado</span>
                                                }
                                            </td>
                                            <td>
                                                @if (orden.EmpleadoAsignado != null)
                                                {
                                                    <span class="badge badge-info">
                                                        @((orden.EmpleadoAsignado != null && !string.IsNullOrEmpty(orden.EmpleadoAsignado.Nombre)) ? orden.EmpleadoAsignado.Nombre : "Sin datos") @((orden.EmpleadoAsignado != null && !string.IsNullOrEmpty(orden.EmpleadoAsignado.Apellido)) ? orden.EmpleadoAsignado.Apellido : "")
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Sin asignar</span>
                                                }
                                            </td>
                                            <td>@orden.FechaIngreso.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            @{
                                                var statusClass = orden.Estado.ToString().ToLower().Replace(" ", "");
                                            }
                                            <span class="status-badge bg-@statusClass">
                                                @orden.Estado
                                            </span>
                                        </td>
                                        <td>
                                            <strong class="text-success">@(orden.Total > 0 ? "$" + orden.Total.ToString("N2") : "Sin datos")</strong>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-controller="OrdenesTrabajo" asp-action="Details" asp-route-id="@orden.OrdenTrabajoId" 
                                                   class="btn btn-info btn-sm" title="Ver Detalles">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                @if (orden.Estado != P_F.Models.Entities.EstadoOrden.Completada && orden.Estado != P_F.Models.Entities.EstadoOrden.Cancelada)
                                                {
                                                    <a asp-controller="OrdenesTrabajo" asp-action="Edit" asp-route-id="@orden.OrdenTrabajoId" 
                                                       class="btn btn-warning btn-sm" title="Editar">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                </div>
            </div>
        }
        else
        {
            <div class="empty-state">
                <div class="empty-state-icon">
                    <i class="fas fa-tasks"></i>
                </div>
                <h3>No hay órdenes de trabajo</h3>
                <p>No se encontraron órdenes para el período seleccionado.</p>
                <a asp-controller="OrdenesTrabajo" asp-action="Index" class="btn btn-gradient">
                    <i class="fas fa-clipboard-list me-2"></i>Ver Todas las Órdenes
                </a>
            </div>
        }
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        $(document).ready(function() {
            // Inicializar DataTable
            $('#dataTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Spanish.json"
                },
                "order": [[4, "desc"]], // Ordenar por fecha ingreso
                "pageLength": 25
            });
        });

        // Configurar gráfico de estados
        @if (ViewBag.OrdenesPorEstado != null)
        {
            <text>
                const ctx = document.getElementById('estadosChart');
                if (ctx) {
                    new Chart(ctx, {
                        type: 'doughnut',
                        data: {
                            labels: [@Html.Raw(string.Join(",", ((IEnumerable<dynamic>)ViewBag.OrdenesPorEstado).Select(e => $"'{e.Estado}'")))],
                            datasets: [{
                                data: [@Html.Raw(string.Join(",", ((IEnumerable<dynamic>)ViewBag.OrdenesPorEstado).Select(e => e.Cantidad)))],
                                backgroundColor: ['#f6c23e', '#36b9cc', '#1cc88a', '#e74a3b'],
                                borderWidth: 3,
                                borderColor: '#fff',
                                hoverOffset: 15,
                                hoverBorderWidth: 4
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            plugins: {
                                legend: {
                                    display: true,
                                    position: 'bottom',
                                    labels: {
                                        padding: 20,
                                        usePointStyle: true,
                                        font: {
                                            size: 13,
                                            weight: '600'
                                        }
                                    }
                                },
                                tooltip: {
                                    backgroundColor: 'rgba(255, 255, 255, 0.95)',
                                    titleColor: '#2c3e50',
                                    bodyColor: '#5a5c69',
                                    borderColor: '#e3e6f0',
                                    borderWidth: 1,
                                    padding: 12,
                                    bodyFont: {
                                        size: 14,
                                        weight: '600'
                                    },
                                    callbacks: {
                                        label: function(context) {
                                            const value = context.parsed;
                                            const total = context.dataset.data.reduce((a, b) => a + b, 0);
                                            const percentage = ((value / total) * 100).toFixed(1);
                                            return `${context.label}: ${value} órdenes (${percentage}%)`;
                                        }
                                    }
                                }
                            },
                            cutout: '70%',
                            animation: {
                                animateRotate: true,
                                animateScale: true,
                                duration: 2000,
                                easing: 'easeInOutQuart'
                            }
                        }
                    });
                }
            </text>
        }
    </script>
}