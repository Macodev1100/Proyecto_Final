@model IEnumerable<P_F.Models.Entities.OrdenTrabajo>

@{
    ViewData["Title"] = "Órdenes por Estado";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex align-items-center justify-content-between mb-4">
                <div>
                    <h1 class="h3 mb-0 text-gray-800">
                        <i class="fas fa-tasks me-2"></i>@ViewData["Title"]
                    </h1>
                    <p class="mb-0 text-muted">Análisis del estado de las órdenes de trabajo</p>
                </div>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Volver
                </a>
            </div>

            <!-- Filtros -->
            <div class="card shadow mb-4">
                <div class="card-header">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-filter me-2"></i>Filtros de Período
                    </h6>
                </div>
                <div class="card-body">
                    <form method="get">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="fechaInicio">Fecha Inicio</label>
                                    <input type="date" name="fechaInicio" id="fechaInicio" class="form-control" value="@ViewBag.FechaInicio?.ToString("yyyy-MM-dd")" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="fechaFin">Fecha Fin</label>
                                    <input type="date" name="fechaFin" id="fechaFin" class="form-control" value="@ViewBag.FechaFin?.ToString("yyyy-MM-dd")" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group d-flex align-items-end">
                                    <button type="submit" class="btn btn-primary w-100">
                                        <i class="fas fa-search me-1"></i>Filtrar
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Estadísticas por estado -->
            <div class="row mb-4">
                @if (ViewBag.OrdenesPorEstado != null)
                {
                    @foreach (var estado in ViewBag.OrdenesPorEstado)
                    {
                        var badgeClass = estado.Estado switch
                        {
                            P_F.Models.Entities.EstadoOrden.Pendiente => "warning",
                            P_F.Models.Entities.EstadoOrden.EnProceso => "info",
                            P_F.Models.Entities.EstadoOrden.Completada => "success",
                            P_F.Models.Entities.EstadoOrden.Cancelada => "danger",
                            _ => "secondary"
                        };
                        var iconClass = estado.Estado switch
                        {
                            P_F.Models.Entities.EstadoOrden.Pendiente => "fa-clock",
                            P_F.Models.Entities.EstadoOrden.EnProceso => "fa-cogs",
                            P_F.Models.Entities.EstadoOrden.Completada => "fa-check-circle",
                            P_F.Models.Entities.EstadoOrden.Cancelada => "fa-times-circle",
                            _ => "fa-question-circle"
                        };
                        <div class="col-xl-3 col-md-6 mb-4">
                            <div class="card border-left-@badgeClass shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-@badgeClass text-uppercase mb-1">
                                                @estado.Estado</div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800">@estado.Cantidad</div>
                                            <div class="small text-gray-500">Q @estado.TotalMonto.ToString("N2")</div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas @iconClass fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>

            <!-- Estadísticas generales -->
            <div class="row mb-4">
                <div class="col-xl-6 col-md-6 mb-4">
                    <div class="card border-left-primary shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                        Total Órdenes</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalOrdenes</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-clipboard-list fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-6 col-md-6 mb-4">
                    <div class="card border-left-success shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                        Monto Total</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">
                                        Q @ViewBag.MontoTotal.ToString("N2")
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Gráfico de distribución -->
            <div class="row mb-4">
                <div class="col-xl-8">
                    <div class="card shadow">
                        <div class="card-header">
                            <h6 class="m-0 font-weight-bold text-primary">
                                <i class="fas fa-chart-pie me-2"></i>Distribución por Estado
                            </h6>
                        </div>
                        <div class="card-body">
                            <canvas id="estadosChart" width="400" height="200"></canvas>
                        </div>
                    </div>
                </div>
                <div class="col-xl-4">
                    <div class="card shadow">
                        <div class="card-header">
                            <h6 class="m-0 font-weight-bold text-primary">
                                <i class="fas fa-chart-bar me-2"></i>Resumen
                            </h6>
                        </div>
                        <div class="card-body">
                            @if (ViewBag.OrdenesPorEstado != null)
                            {
                                @foreach (var estado in ViewBag.OrdenesPorEstado)
                                {
                                    var porcentaje = ViewBag.TotalOrdenes > 0 ? (estado.Cantidad * 100.0 / ViewBag.TotalOrdenes) : 0;
                                    var badgeClass = estado.Estado switch
                                    {
                                        P_F.Models.Entities.EstadoOrden.Pendiente => "warning",
                                        P_F.Models.Entities.EstadoOrden.EnProceso => "info",
                                        P_F.Models.Entities.EstadoOrden.Completada => "success",
                                        P_F.Models.Entities.EstadoOrden.Cancelada => "danger",
                                        _ => "secondary"
                                    };
                                    <div class="mb-3">
                                        <div class="small mb-1">
                                            <span class="badge badge-@badgeClass">@estado.Estado</span>
                                            <span class="float-right">@porcentaje.ToString("F1")%</span>
                                        </div>
                                        <div class="progress progress-sm">
                                            <div class="progress-bar bg-@badgeClass" role="progressbar" style="width: @porcentaje.ToString("F1")%"></div>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Tabla de órdenes -->
            @if (Model.Any())
            {
                <div class="card shadow">
                    <div class="card-header">
                        <h6 class="m-0 font-weight-bold text-primary">
                            <i class="fas fa-table me-2"></i>Órdenes de Trabajo Recientes
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Número</th>
                                        <th>Cliente</th>
                                        <th>Vehículo</th>
                                        <th>Empleado</th>
                                        <th>Fecha Ingreso</th>
                                        <th>Estado</th>
                                        <th>Total</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var orden in Model)
                                    {
                                        var badgeClass = orden.Estado switch
                                        {
                                            P_F.Models.Entities.EstadoOrden.Pendiente => "warning",
                                            P_F.Models.Entities.EstadoOrden.EnProceso => "info",
                                            P_F.Models.Entities.EstadoOrden.Completada => "success",
                                            P_F.Models.Entities.EstadoOrden.Cancelada => "danger",
                                            _ => "secondary"
                                        };
                                        <tr>
                                            <td>
                                                <strong>@orden.NumeroOrden</strong>
                                            </td>
                                            <td>
                                                <div>
                                                    <strong>@orden.Cliente?.Nombre @orden.Cliente?.Apellido</strong>
                                                    @if (!string.IsNullOrEmpty(orden.Cliente?.DocumentoIdentidad))
                                                    {
                                                        <br><small class="text-muted">@orden.Cliente.DocumentoIdentidad</small>
                                                    }
                                                </div>
                                            </td>
                                            <td>
                                                @if (orden.Vehiculo != null)
                                                {
                                                    <div>
                                                        <strong>@orden.Vehiculo.Marca @orden.Vehiculo.Modelo</strong>
                                                        <br><small class="text-muted">@orden.Vehiculo.Placa</small>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No asignado</span>
                                                }
                                            </td>
                                            <td>
                                                @if (orden.EmpleadoAsignado != null)
                                                {
                                                    <span class="badge badge-info">
                                                        @orden.EmpleadoAsignado.Nombre @orden.EmpleadoAsignado.Apellido
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Sin asignar</span>
                                                }
                                            </td>
                                            <td>@orden.FechaIngreso.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                <span class="badge badge-@badgeClass">
                                                    @orden.Estado
                                                </span>
                                            </td>
                                            <td>
                                                <strong>Q @orden.Total.ToString("N2")</strong>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-controller="OrdenesTrabajo" asp-action="Details" asp-route-id="@orden.OrdenTrabajoId" 
                                                       class="btn btn-info btn-sm" title="Ver Detalles">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    @if (orden.Estado != P_F.Models.Entities.EstadoOrden.Completada && orden.Estado != P_F.Models.Entities.EstadoOrden.Cancelada)
                                                    {
                                                        <a asp-controller="OrdenesTrabajo" asp-action="Edit" asp-route-id="@orden.OrdenTrabajoId" 
                                                           class="btn btn-warning btn-sm" title="Editar">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="card shadow">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-tasks fa-5x text-gray-300 mb-4"></i>
                        <h3>No hay órdenes de trabajo</h3>
                        <p class="text-muted">No se encontraron órdenes para el período seleccionado.</p>
                        <a asp-controller="OrdenesTrabajo" asp-action="Index" class="btn btn-primary mt-3">
                            <i class="fas fa-clipboard-list me-2"></i>Ver Todas las Órdenes
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        $(document).ready(function() {
            // Inicializar DataTable
            $('#dataTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Spanish.json"
                },
                "order": [[4, "desc"]], // Ordenar por fecha ingreso
                "pageLength": 25
            });
        });

        // Configurar gráfico de estados
        @if (ViewBag.OrdenesPorEstado != null)
        {
            <text>
                var ctx = document.getElementById('estadosChart').getContext('2d');
                var estados = ['Pendiente', 'EnProceso', 'Completada', 'Cancelada'];
                var cantidades = [10, 15, 25, 5];

                var estadosChart = new Chart(ctx, {
                    type: 'doughnut',
                    data: {
                        labels: estados,
                        datasets: [{
                            data: cantidades,
                            backgroundColor: ['#f6c23e', '#36b9cc', '#1cc88a', '#e74a3b'],
                            hoverBackgroundColor: ['#dda20a', '#2c9faf', '#17a673', '#c0392b'],
                        }],
                    },
                    options: {
                        maintainAspectRatio: false,
                        tooltips: {
                            backgroundColor: "rgb(255,255,255)",
                            bodyFontColor: "#858796",
                            borderColor: '#dddfeb',
                            borderWidth: 1,
                            callbacks: {
                                label: function(tooltipItem, chart) {
                                    var dataLabel = chart.labels[tooltipItem.index];
                                    var value = chart.datasets[tooltipItem.datasetIndex].data[tooltipItem.index];
                                    var total = chart.datasets[0].data.reduce((a, b) => a + b, 0);
                                    var percentage = Math.round((value / total) * 100);
                                    return dataLabel + ': ' + value + ' (' + percentage + '%)';
                                }
                            }
                        },
                        legend: {
                            display: false
                        },
                        cutoutPercentage: 80,
                    },
                });
            </text>
        }
    </script>
}