@{
    ViewData["Title"] = "Bienvenido - Taller P&F";
}

<style>
    .welcome-section {
        min-height: 80vh;
        display: flex;
        align-items: center;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        position: relative;
        overflow: hidden;
    }

    .welcome-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="20" cy="20" r="2" fill="rgba(255,255,255,0.1)"/><circle cx="80" cy="40" r="3" fill="rgba(255,255,255,0.1)"/><circle cx="40" cy="80" r="2" fill="rgba(255,255,255,0.1)"/></svg>');
        pointer-events: none;
    }

    .welcome-content {
        position: relative;
        z-index: 1;
    }

    .brand-logo {
        font-size: 5rem;
        margin-bottom: 2rem;
        animation: float 3s ease-in-out infinite;
    }

    @@keyframes float {
        0%, 100% { transform: translateY(0px); }
        50% { transform: translateY(-20px); }
    }

    .feature-box {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border-radius: 15px;
        padding: 2rem;
        margin-bottom: 1.5rem;
        border: 1px solid rgba(255, 255, 255, 0.2);
        transition: all 0.3s ease;
    }

    .feature-box:hover {
        background: rgba(255, 255, 255, 0.15);
        transform: translateX(10px);
    }

    .feature-box i {
        font-size: 2rem;
        margin-bottom: 1rem;
        display: block;
    }

    .btn-login {
        background: white;
        color: #667eea;
        border-radius: 50px;
        padding: 1rem 3rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: all 0.3s ease;
        border: none;
        font-size: 1.1rem;
        box-shadow: 0 4px 15px rgba(0,0,0,0.2);
    }

    .btn-login:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.3);
        color: #764ba2;
        background: #f8f9fa;
    }

    .info-section {
        padding: 4rem 0;
        background: #f8f9fc;
    }

    .info-card {
        background: white;
        border-radius: 15px;
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
        border: none;
        height: 100%;
    }

    .info-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.15);
    }

    .info-icon {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
        font-size: 2rem;
        color: white;
    }

    .icon-primary { background: linear-gradient(135deg, #4e73df, #6f9ceb); }
    .icon-success { background: linear-gradient(135deg, #1cc88a, #36d9ac); }
    .icon-warning { background: linear-gradient(135deg, #f6c23e, #f8d866); }

    @@media (max-width: 768px) {
        .brand-logo {
            font-size: 3rem;
        }
        
        .welcome-section {
            min-height: 60vh;
        }
    }
</style>

<!-- Welcome Section -->
<section class="welcome-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 welcome-content text-center text-lg-start">
                <div class="brand-logo">
                    <i class="fas fa-wrench"></i>
                </div>
                <h1 class="display-3 fw-bold mb-4">
                    Taller P&F
                </h1>
                <p class="lead mb-4 fs-4">
                    Sistema Profesional de Gestión para Talleres Mecánicos
                </p>
                <p class="fs-5 mb-5">
                    Administra tu taller de manera eficiente con nuestra plataforma integral de gestión
                </p>
                <a href="/Identity/Account/Login" class="btn btn-login btn-lg">
                    <i class="fas fa-sign-in-alt me-2"></i>
                    Iniciar Sesión
                </a>
            </div>
            
            <div class="col-lg-6 mt-5 mt-lg-0">
                <div class="feature-box">
                    <i class="fas fa-users"></i>
                    <h5 class="fw-bold mb-2">Gestión de Clientes</h5>
                    <p class="mb-0">Control completo de clientes y vehículos con historial detallado</p>
                </div>
                <div class="feature-box">
                    <i class="fas fa-clipboard-list"></i>
                    <h5 class="fw-bold mb-2">Órdenes de Trabajo</h5>
                    <p class="mb-0">Seguimiento en tiempo real de servicios y reparaciones</p>
                </div>
                <div class="feature-box">
                    <i class="fas fa-file-invoice-dollar"></i>
                    <h5 class="fw-bold mb-2">Facturación Integrada</h5>
                    <p class="mb-0">Genera facturas profesionales y controla pagos fácilmente</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Info Section -->
<section class="info-section">
    <div class="container">
        <div class="row text-center mb-5">
            <div class="col-lg-8 mx-auto">
                <h2 class="display-5 fw-bold mb-3">¿Por qué elegir nuestro sistema?</h2>
                <p class="lead text-muted">
                    Optimiza la operación de tu taller con herramientas diseñadas específicamente para la industria automotriz
                </p>
            </div>
        </div>

        <div class="row g-4">
            <div class="col-lg-4">
                <div class="info-card text-center">
                    <div class="info-icon icon-primary mx-auto">
                        <i class="fas fa-chart-line"></i>
                    </div>
                    <h4 class="fw-bold mb-3">Mayor Productividad</h4>
                    <p class="text-muted">
                        Automatiza procesos repetitivos y reduce tiempos de gestión hasta en un 60%. 
                        Dedica más tiempo a lo que realmente importa: atender a tus clientes.
                    </p>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="info-card text-center">
                    <div class="info-icon icon-success mx-auto">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <h4 class="fw-bold mb-3">Seguridad de Datos</h4>
                    <p class="text-muted">
                        Información protegida con encriptación de nivel empresarial. 
                        Control de acceso por roles y respaldos automáticos diarios.
                    </p>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="info-card text-center">
                    <div class="info-icon icon-warning mx-auto">
                        <i class="fas fa-headset"></i>
                    </div>
                    <h4 class="fw-bold mb-3">Soporte Técnico</h4>
                    <p class="text-muted">
                        Equipo de soporte disponible para ayudarte. 
                        Actualizaciones constantes y capacitación incluida sin costo adicional.
                    </p>
                </div>
            </div>
        </div>

        <div class="row mt-5">
            <div class="col-lg-8 mx-auto text-center">
                <div class="card border-0 shadow-lg" style="border-radius: 20px; overflow: hidden;">
                    <div class="card-body p-5" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
                        <h3 class="fw-bold mb-3">¿Listo para optimizar tu taller?</h3>
                        <p class="lead mb-4">
                            Accede al sistema completo y comienza a gestionar tu negocio de manera profesional
                        </p>
                        <a href="/Identity/Account/Login" class="btn btn-light btn-lg px-5" style="border-radius: 50px;">
                            <i class="fas fa-rocket me-2"></i>
                            Ingresar al Sistema
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>