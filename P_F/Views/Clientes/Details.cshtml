@model P_F.Models.DTOs.ClienteDTO

@{
    ViewData["Title"] = $"Cliente: {Model.Nombre} {Model.Apellido}";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">
        <i class="fas fa-user me-2"></i>@Model.Nombre @Model.Apellido
        @if (!Model.Activo)
        {
            <span class="badge bg-danger ms-2">Inactivo</span>
        }
    </h1>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.ClienteId" class="btn btn-warning btn-sm shadow-sm me-2">
            <i class="fas fa-edit fa-sm text-white-50 me-1"></i>
            Editar Cliente
        </a>
        <a asp-action="Index" class="btn btn-secondary btn-sm shadow-sm">
            <i class="fas fa-arrow-left fa-sm text-white-50 me-1"></i>
            Volver a Lista
        </a>
    </div>
</div>

<div class="row">
    <!-- Información del Cliente -->
    <div class="col-lg-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-user-circle me-2"></i>Información Personal
                </h6>
            </div>
            <div class="card-body">
                <div class="text-center mb-4">
                    <i class="fas fa-user-circle fa-5x text-gray-300"></i>
                    <h5 class="mt-2">@Model.Nombre @Model.Apellido</h5>
                    <p class="text-muted">Cliente desde @Model.FechaRegistro.ToString("dd/MM/yyyy")</p>
                </div>

                <table class="table table-borderless">
                    <tbody>
                        @if (!string.IsNullOrEmpty(Model.DocumentoIdentidad))
                        {
                            <tr>
                                <td><i class="fas fa-id-card text-primary me-2"></i><strong>Documento:</strong></td>
                                <td>@Model.DocumentoIdentidad</td>
                            </tr>
                        }
                        <tr>
                            <td><i class="fas fa-phone text-primary me-2"></i><strong>Teléfono:</strong></td>
                            <td>
                                <a href="tel:@Model.Telefono" class="text-decoration-none">
                                    @Model.Telefono
                                </a>
                            </td>
                        </tr>
                        @if (!string.IsNullOrEmpty(Model.Email))
                        {
                            <tr>
                                <td><i class="fas fa-envelope text-primary me-2"></i><strong>Email:</strong></td>
                                <td>
                                    <a href="mailto:@Model.Email" class="text-decoration-none">
                                        @Model.Email
                                    </a>
                                </td>
                            </tr>
                        }
                        @if (!string.IsNullOrEmpty(Model.Direccion))
                        {
                            <tr>
                                <td><i class="fas fa-map-marker-alt text-primary me-2"></i><strong>Dirección:</strong></td>
                                <td>@Model.Direccion</td>
                            </tr>
                        }
                        <tr>
                            <td><i class="fas fa-calendar text-primary me-2"></i><strong>Registro:</strong></td>
                            <td>@Model.FechaRegistro.ToString("dd/MM/yyyy HH:mm")</td>
                        </tr>
                        <tr>
                            <td><i class="fas fa-info-circle text-primary me-2"></i><strong>Estado:</strong></td>
                            <td>
                                @if (Model.Activo)
                                {
                                    <span class="badge bg-success">Activo</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inactivo</span>
                                }
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Acciones Rápidas -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-success">
                    <i class="fas fa-bolt me-2"></i>Acciones Rápidas
                </h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-controller="OrdenesTrabajo" asp-action="Create" asp-route-clienteId="@Model.ClienteId" 
                       class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Nueva Orden de Trabajo
                    </a>
                    <a asp-controller="Vehiculos" asp-action="Create" asp-route-clienteId="@Model.ClienteId" 
                       class="btn btn-success">
                        <i class="fas fa-car me-2"></i>Agregar Vehículo
                    </a>
                    <a href="tel:@Model.Telefono" class="btn btn-info">
                        <i class="fas fa-phone me-2"></i>Llamar Cliente
                    </a>
                    @if (!string.IsNullOrEmpty(Model.Email))
                    {
                        <a href="mailto:@Model.Email" class="btn btn-warning">
                            <i class="fas fa-envelope me-2"></i>Enviar Email
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Contenido Principal -->
    <div class="col-lg-8">
        <!-- Vehículos -->
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-car me-2"></i>Vehículos Registrados
                    <span class="badge bg-info ms-2">@(Model.Vehiculos?.Count() ?? 0)</span>
                </h6>
                <a asp-controller="Vehiculos" asp-action="Create" asp-route-clienteId="@Model.ClienteId" 
                   class="btn btn-success btn-sm">
                    <i class="fas fa-plus me-1"></i>Agregar
                </a>
            </div>
            <div class="card-body">
                @if (Model.Vehiculos != null && Model.Vehiculos.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Placa</th>
                                    <th>Vehículo</th>
                                    <th>Año</th>
                                    <th>Color</th>
                                    <th>Kilometraje</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var vehiculo in Model.Vehiculos)
                                {
                                    <tr>
                                        <td><strong>@vehiculo.Placa</strong></td>
                                        <td>
                                            <div>
                                                <strong>@vehiculo.Marca @vehiculo.Modelo</strong>
                                                @if (!string.IsNullOrEmpty(vehiculo.TipoCombustible))
                                                {
                                                    <br><small class="text-muted">@vehiculo.TipoCombustible</small>
                                                }
                                            </div>
                                        </td>
                                        <td>@vehiculo.Anio</td>
                                        <td>@vehiculo.Color</td>
                                        <td>@((vehiculo.Kilometraje ?? 0).ToString("N0")) km</td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a asp-controller="Vehiculos" asp-action="Details" asp-route-id="@vehiculo.VehiculoId" 
                                                   class="btn btn-info" title="Ver Detalles">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-controller="Vehiculos" asp-action="Edit" asp-route-id="@vehiculo.VehiculoId" 
                                                   class="btn btn-warning" title="Editar">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-controller="OrdenesTrabajo" asp-action="Create" 
                                                   asp-route-clienteId="@Model.ClienteId" asp-route-vehiculoId="@vehiculo.VehiculoId"
                                                   class="btn btn-success" title="Nueva Orden">
                                                    <i class="fas fa-plus"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-car fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">No hay vehículos registrados</h5>
                        <p class="text-muted">Agrega el primer vehículo de este cliente</p>
                        <a asp-controller="Vehiculos" asp-action="Create" asp-route-clienteId="@Model.ClienteId" 
                           class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>Agregar Primer Vehículo
                        </a>
                    </div>
                }
            </div>
        </div>

        <!-- Historial de Órdenes -->
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-clipboard-list me-2"></i>Historial de Órdenes de Trabajo
                    <span class="badge bg-info ms-2">@(Model.OrdenesTrabajo?.Count() ?? 0)</span>
                </h6>
                <a asp-controller="OrdenesTrabajo" asp-action="Create" asp-route-clienteId="@Model.ClienteId" 
                   class="btn btn-primary btn-sm">
                    <i class="fas fa-plus me-1"></i>Nueva Orden
                </a>
            </div>
            <div class="card-body">
                @if (Model.OrdenesTrabajo != null && Model.OrdenesTrabajo.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Orden #</th>
                                    <th>Vehículo</th>
                                    <th>Fecha</th>
                                    <th>Estado</th>
                                    <th>Total</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var orden in Model.OrdenesTrabajo.OrderByDescending(o => o.FechaIngreso).Take(10))
                                {
                                    <tr>
                                        <td><strong>@orden.NumeroOrden</strong></td>
                                        <td>
                                            @orden.VehiculoPlaca
                                            <br><small class="text-muted">Vehículo</small>
                                        </td>
                                        <td>
                                            @orden.FechaIngreso.ToString("dd/MM/yyyy")
                                            <br><small class="text-muted">@orden.FechaIngreso.ToString("HH:mm")</small>
                                        </td>
                                        <td>
                                            @switch (orden.Estado)
                                            {
                                                case P_F.Models.Entities.EstadoOrden.Pendiente:
                                                    <span class="badge bg-warning">Pendiente</span>
                                                    break;
                                                case P_F.Models.Entities.EstadoOrden.EnProceso:
                                                    <span class="badge bg-info">En Proceso</span>
                                                    break;
                                                case P_F.Models.Entities.EstadoOrden.Completada:
                                                    <span class="badge bg-success">Completada</span>
                                                    break;
                                                case P_F.Models.Entities.EstadoOrden.Entregada:
                                                    <span class="badge bg-primary">Entregada</span>
                                                    break;
                                                case P_F.Models.Entities.EstadoOrden.Cancelada:
                                                    <span class="badge bg-danger">Cancelada</span>
                                                    break;
                                            }
                                        </td>
                                        <td><strong>$@orden.Total.ToString("N2")</strong></td>
                                        <td>
                                            <a asp-controller="OrdenesTrabajo" asp-action="Details" asp-route-id="@orden.OrdenTrabajoId" 
                                               class="btn btn-info btn-sm" title="Ver Detalles">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    
                    @if (Model.OrdenesTrabajo != null && Model.OrdenesTrabajo.Count() > 10)
                    {
                        <div class="text-center">
                            <a asp-controller="OrdenesTrabajo" asp-action="Index" asp-route-clienteId="@Model.ClienteId" 
                               class="btn btn-outline-primary">
                                <i class="fas fa-list me-2"></i>Ver Todas las Órdenes (@(Model.OrdenesTrabajo?.Count() ?? 0))
                            </a>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-clipboard-list fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">No hay órdenes de trabajo</h5>
                        <p class="text-muted">Aún no se han creado órdenes para este cliente</p>
                        <a asp-controller="OrdenesTrabajo" asp-action="Create" asp-route-clienteId="@Model.ClienteId" 
                           class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>Crear Primera Orden
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Inicializar tooltips
        document.addEventListener('DOMContentLoaded', function () {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[title]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
    
    <style>
        .text-gray-300 {
            color: #dddfeb !important;
        }
        
        .btn-group-sm > .btn, .btn-sm {
            padding: 0.25rem 0.5rem;
            font-size: 0.875rem;
        }
        
        .badge {
            font-size: 0.75em;
        }
    </style>
}