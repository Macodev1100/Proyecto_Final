@model IEnumerable<MotorTechService.Models.Entities.Repuesto>

@{
    ViewData["Title"] = "Inventario Crítico";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">
        <i class="fas fa-exclamation-triangle me-2 text-warning"></i>Inventario Crítico
    </h1>
    <div>
        <a href="@Url.Action("InventarioPdf", "Reportes")" class="btn btn-danger btn-sm">
            <i class="fas fa-file-pdf me-1"></i>Descargar PDF
        </a>
        <a href="@Url.Action("Index", "Reportes")" class="btn btn-secondary btn-sm">
            <i class="fas fa-arrow-left me-1"></i>Volver a Reportes
        </a>
    </div>
</div>

@if (Model.Any())
{
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-danger">
                @(Model != null && Model.Count() > 0 ? $"Repuestos con Stock Crítico ({Model.Count()} repuestos)" : "Sin datos de repuestos críticos")
            </h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" width="100%" cellspacing="0">
                    <thead class="thead-light">
                        <tr>
                            <th>Repuesto</th>
                            <th>Categoría</th>
                            <th>Stock Actual</th>
                            <th>Stock Mínimo</th>
                            <th>Precio Venta</th>
                            <th>Estado</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var repuesto in Model)
                            {
                                var alertLevel = repuesto.StockActual == 0 ? "danger" : 
                                               repuesto.StockActual <= repuesto.StockMinimo ? "warning" : "success";
                                <tr>
                                    <td>
                                        <strong>@(string.IsNullOrEmpty(repuesto.Nombre) ? "Sin datos" : repuesto.Nombre)</strong>
                                        @if (!string.IsNullOrEmpty(repuesto.Codigo))
                                        {
                                            <br><small class="text-muted">@(!string.IsNullOrEmpty(repuesto.Codigo) ? $"Código: {repuesto.Codigo}" : "Sin código")</small>
                                        }
                                    </td>
                                    <td>Sin categoría</td>
                                    <td>
                                        <span class="badge badge-@alertLevel">
                                            @(repuesto.StockActual > 0 ? repuesto.StockActual.ToString() : "Sin datos")
                                        </span>
                                    </td>
                                    <td>@(repuesto.StockMinimo > 0 ? repuesto.StockMinimo.ToString() : "Sin datos")</td>
                                    <td>@(repuesto.PrecioVenta > 0 ? "$" + repuesto.PrecioVenta.ToString("N2") : "Sin datos")</td>
                                    <td>
                                        @if (repuesto.StockActual == 0)
                                        {
                                            <span class="badge badge-danger">Sin Stock</span>
                                        }
                                        else if (repuesto.StockActual <= repuesto.StockMinimo)
                                        {
                                            <span class="badge badge-warning">Crítico</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-success">Normal</span>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="card shadow mb-4">
        <div class="card-body text-center py-5">
            <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
            <h5 class="text-success">¡Excelente!</h5>
            <p class="text-muted">Todos los repuestos tienen stock suficiente.</p>
            <a href="@Url.Action("Index", "Repuestos")" class="btn btn-primary">
                <i class="fas fa-boxes me-1"></i>Ver Todo el Inventario
            </a>
        </div>
    </div>
}