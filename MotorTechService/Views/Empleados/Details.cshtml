@model MotorTechService.Models.Entities.Empleado

@{
    ViewData["Title"] = "Detalles del Empleado";
}

<div class="container-fluid">
    <!-- Encabezado -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="text-primary">
                    <i class="fas fa-user me-2"></i>@Model.Nombre @Model.Apellido
                </h2>
                <div class="btn-group">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Volver al Listado
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model.EmpleadoId" class="btn btn-warning">
                        <i class="fas fa-edit me-1"></i>Editar
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Información Personal -->
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-user me-2"></i>Información Personal
                    </h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <div class="rounded-circle bg-primary text-white d-inline-flex align-items-center justify-content-center" 
                             style="width: 80px; height: 80px; font-size: 2rem;">
                            @Model.Nombre.First()@Model.Apellido.First()
                        </div>
                        <h4 class="mt-3">@Model.Nombre @Model.Apellido</h4>
                        <span class="badge bg-@(Model.TipoEmpleado == MotorTechService.Models.Entities.TipoEmpleado.Mecanico ? "primary" : 
                                               Model.TipoEmpleado == MotorTechService.Models.Entities.TipoEmpleado.Recepcionista ? "info" : 
                                               Model.TipoEmpleado == MotorTechService.Models.Entities.TipoEmpleado.Supervisor ? "warning" : "secondary") fs-6">
                            @Model.TipoEmpleado.ToString()
                        </span>
                    </div>

                    <div class="row g-3">
                        <div class="col-12">
                            <strong>Documento:</strong><br>
                            <span class="text-muted">@Model.DocumentoIdentidad</span>
                        </div>
                        
                        @if (!string.IsNullOrEmpty(Model.Telefono))
                        {
                            <div class="col-12">
                                <strong>Teléfono:</strong><br>
                                <span class="text-muted">
                                    <i class="fas fa-phone me-1"></i>@Model.Telefono
                                </span>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.Email))
                        {
                            <div class="col-12">
                                <strong>Email:</strong><br>
                                <span class="text-muted">
                                    <i class="fas fa-envelope me-1"></i>@Model.Email
                                </span>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.Direccion))
                        {
                            <div class="col-12">
                                <strong>Dirección:</strong><br>
                                <span class="text-muted">@Model.Direccion</span>
                            </div>
                        }

                        <div class="col-12">
                            <strong>Estado:</strong><br>
                            @if (Model.Activo)
                            {
                                <span class="badge bg-success">
                                    <i class="fas fa-check me-1"></i>Activo
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-danger">
                                    <i class="fas fa-times me-1"></i>Inactivo
                                </span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Información Laboral -->
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-briefcase me-2"></i>Información Laboral
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        @if (!string.IsNullOrEmpty(Model.Especialidad))
                        {
                            <div class="col-12">
                                <strong>Especialidad:</strong><br>
                                <span class="badge bg-info">@Model.Especialidad</span>
                            </div>
                        }

                        <div class="col-12">
                            <strong>Fecha de Contratación:</strong><br>
                            <span class="text-muted">
                                <i class="fas fa-calendar me-1"></i>@Model.FechaContratacion.ToString("dd/MM/yyyy")
                            </span>
                        </div>

                        @if (Model.FechaTerminacion.HasValue)
                        {
                            <div class="col-12">
                                <strong>Fecha de Terminación:</strong><br>
                                <span class="text-muted text-danger">
                                    <i class="fas fa-calendar-times me-1"></i>@Model.FechaTerminacion.Value.ToString("dd/MM/yyyy")
                                </span>
                            </div>
                        }

                        <div class="col-6">
                            <strong>Salario/Hora:</strong><br>
                            <span class="text-success">
                                <i class="fas fa-dollar-sign me-1"></i>@Model.SalarioHora.ToString("N2")
                            </span>
                        </div>

                        <div class="col-6">
                            <strong>Comisión:</strong><br>
                            <span class="text-info">
                                @Model.PorcentajeComision.ToString("N1")%
                            </span>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.Observaciones))
                        {
                            <div class="col-12">
                                <strong>Observaciones:</strong><br>
                                <span class="text-muted small">@Model.Observaciones</span>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Estadísticas -->
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-chart-bar me-2"></i>Estadísticas
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-12">
                            <div class="d-flex justify-content-between align-items-center">
                                <span>Órdenes Asignadas:</span>
                                <span class="badge bg-primary">@(Model.OrdenesAsignadas?.Count ?? 0)</span>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="d-flex justify-content-between align-items-center">
                                <span>Órdenes Completadas:</span>
                                <span class="badge bg-success">
                                    @(Model.OrdenesAsignadas?.Count(o => o.Estado == MotorTechService.Models.Entities.EstadoOrden.Completada || o.Estado == MotorTechService.Models.Entities.EstadoOrden.Entregada) ?? 0)
                                </span>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="d-flex justify-content-between align-items-center">
                                <span>Órdenes Pendientes:</span>
                                <span class="badge bg-warning">
                                    @(Model.OrdenesAsignadas?.Count(o => o.Estado == MotorTechService.Models.Entities.EstadoOrden.Pendiente || o.Estado == MotorTechService.Models.Entities.EstadoOrden.EnProceso) ?? 0)
                                </span>
                            </div>
                        </div>

                        @{
                            var totalOrdenes = Model.OrdenesAsignadas?.Count ?? 0;
                            var completadas = Model.OrdenesAsignadas?.Count(o => o.Estado == MotorTechService.Models.Entities.EstadoOrden.Completada || o.Estado == MotorTechService.Models.Entities.EstadoOrden.Entregada) ?? 0;
                            var eficiencia = totalOrdenes > 0 ? Math.Round((double)completadas / totalOrdenes * 100, 1) : 0;
                        }

                        <div class="col-12">
                            <strong>Eficiencia:</strong>
                            <div class="progress mt-2" style="height: 20px;">
                                <div class="progress-bar bg-@(eficiencia >= 80 ? "success" : eficiencia >= 60 ? "warning" : "danger")" 
                                     style="width: @eficiencia%">
                                    @eficiencia%
                                </div>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="d-flex justify-content-between align-items-center">
                                <span>Tiempo en la empresa:</span>
                                <span class="text-muted">
                                    @{
                                        var tiempoTrabajo = Model.FechaTerminacion?.Subtract(Model.FechaContratacion) ?? DateTime.Now.Subtract(Model.FechaContratacion);
                                        var años = (int)(tiempoTrabajo.TotalDays / 365);
                                        var meses = (int)((tiempoTrabajo.TotalDays % 365) / 30);
                                    }
                                    @if (años > 0)
                                    {
                                        @años @(años == 1 ? "año" : "años")
                                        @if (meses > 0)
                                        {
                                            @:, @meses @(meses == 1 ? "mes" : "meses")
                                        }
                                    }
                                    else if (meses > 0)
                                    {
                                        @meses @(meses == 1 ? "mes" : "meses")
                                    }
                                    else
                                    {
                                        @:Menos de un mes
                                    }
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Órdenes Recientes -->
    @if (Model.OrdenesAsignadas?.Any() == true)
    {
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-wrench me-2"></i>Órdenes de Trabajo Recientes
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Número</th>
                                        <th>Cliente</th>
                                        <th>Vehículo</th>
                                        <th>Estado</th>
                                        <th>Fecha Ingreso</th>
                                        <th>Total</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var orden in Model.OrdenesAsignadas.OrderByDescending(o => o.FechaIngreso).Take(10))
                                    {
                                        <tr>
                                            <td><strong>@orden.NumeroOrden</strong></td>
                                            <td>@orden.Cliente?.Nombre @orden.Cliente?.Apellido</td>
                                            <td>@orden.Vehiculo?.Marca @orden.Vehiculo?.Modelo</td>
                                            <td>
                                                <span class="badge bg-@(orden.Estado == MotorTechService.Models.Entities.EstadoOrden.Completada ? "success" : 
                                                                       orden.Estado == MotorTechService.Models.Entities.EstadoOrden.EnProceso ? "primary" : 
                                                                       orden.Estado == MotorTechService.Models.Entities.EstadoOrden.Pendiente ? "warning" : "secondary")">
                                                    @orden.Estado.ToString()
                                                </span>
                                            </td>
                                            <td>@orden.FechaIngreso.ToString("dd/MM/yyyy")</td>
                                            <td>$@orden.Total.ToString("N2")</td>
                                            <td>
                                                <a asp-controller="OrdenesTrabajo" asp-action="Details" asp-route-id="@orden.OrdenTrabajoId" 
                                                   class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>