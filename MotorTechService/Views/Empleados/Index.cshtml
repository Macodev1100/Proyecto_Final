@model IEnumerable<MotorTechService.Models.Entities.Empleado>

@{
    ViewData["Title"] = "Empleados";
}

<div class="container-fluid">
    <!-- Encabezado -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="text-primary">
                    <i class="fas fa-users-cog me-2"></i>Gestión de Empleados
                </h2>
                <a asp-action="Create" class="btn btn-success">
                    <i class="fas fa-plus me-1"></i>Nuevo Empleado
                </a>
            </div>
        </div>
    </div>

    <!-- Filtros -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Buscar</label>
                    <input type="text" class="form-control" name="searchString" 
                           value="@ViewData["CurrentFilter"]" placeholder="Nombre, apellido, documento...">
                </div>
                <div class="col-md-3">
                    <label class="form-label">Tipo de Empleado</label>
                    <select name="tipo" class="form-select">
                        <option value="">Todos los tipos</option>
                        @foreach (var tipoValue in Enum.GetValues<MotorTechService.Models.Entities.TipoEmpleado>())
                        {
                            <option value="@((int)tipoValue)" selected="@(ViewData["TipoFilter"]?.Equals(tipoValue) == true)">
                                @tipoValue.ToString()
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Estado</label>
                    <select name="activo" class="form-select">
                        <option value="">Todos</option>
                        <option value="true" selected="@(ViewData["ActivoFilter"]?.Equals(true) == true)">Activos</option>
                        <option value="false" selected="@(ViewData["ActivoFilter"]?.Equals(false) == true)">Inactivos</option>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-outline-primary w-100">
                        <i class="fas fa-search me-1"></i>Buscar
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Tabla de Empleados -->
    <div class="card">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>
                                    <a asp-action="Index" asp-route-sortOrder="@ViewData["NombreSortParm"]" 
                                       asp-route-currentFilter="@ViewData["CurrentFilter"]"
                                       asp-route-tipo="@ViewData["TipoFilter"]"
                                       asp-route-activo="@ViewData["ActivoFilter"]"
                                       class="text-dark text-decoration-none fw-bold">
                                        Nombre <i class="fas fa-sort"></i>
                                    </a>
                                </th>
                                <th>
                                    <a asp-action="Index" asp-route-sortOrder="@ViewData["TipoSortParm"]" 
                                       asp-route-currentFilter="@ViewData["CurrentFilter"]"
                                       asp-route-tipo="@ViewData["TipoFilter"]"
                                       asp-route-activo="@ViewData["ActivoFilter"]"
                                       class="text-dark text-decoration-none fw-bold">
                                        Tipo <i class="fas fa-sort"></i>
                                    </a>
                                </th>
                                <th class="fw-bold">Documento</th>
                                <th class="fw-bold">Contacto</th>
                                <th>
                                    <a asp-action="Index" asp-route-sortOrder="@ViewData["FechaSortParm"]" 
                                       asp-route-currentFilter="@ViewData["CurrentFilter"]"
                                       asp-route-tipo="@ViewData["TipoFilter"]"
                                       asp-route-activo="@ViewData["ActivoFilter"]"
                                       class="text-dark text-decoration-none fw-bold">
                                        Fecha Contratación <i class="fas fa-sort"></i>
                                    </a>
                                </th>
                                <th class="fw-bold">Estado</th>
                                <th class="fw-bold">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var empleado in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar me-3">
                                                <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                                    @(empleado.Nombre.FirstOrDefault())@(empleado.Apellido.FirstOrDefault())
                                                </div>
                                            </div>
                                            <div>
                                                <strong>@empleado.Nombre @empleado.Apellido</strong>
                                                @if (!string.IsNullOrEmpty(empleado.Especialidad))
                                                {
                                                    <br><small class="text-muted">@empleado.Especialidad</small>
                                                }
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-@(empleado.TipoEmpleado == MotorTechService.Models.Entities.TipoEmpleado.Mecanico ? "primary" : 
                                                               empleado.TipoEmpleado == MotorTechService.Models.Entities.TipoEmpleado.Recepcionista ? "info" : 
                                                               empleado.TipoEmpleado == MotorTechService.Models.Entities.TipoEmpleado.Supervisor ? "warning" : "secondary")">
                                            @empleado.TipoEmpleado.ToString()
                                        </span>
                                    </td>
                                    <td>@empleado.DocumentoIdentidad</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(empleado.Telefono))
                                        {
                                            <div><i class="fas fa-phone me-1"></i>@empleado.Telefono</div>
                                        }
                                        @if (!string.IsNullOrEmpty(empleado.Email))
                                        {
                                            <div><i class="fas fa-envelope me-1"></i>@empleado.Email</div>
                                        }
                                    </td>
                                    <td>@empleado.FechaContratacion.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        @if (empleado.Activo)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check me-1"></i>Activo
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">
                                                <i class="fas fa-times me-1"></i>Inactivo
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group">
                                            <a asp-action="Details" asp-route-id="@empleado.EmpleadoId" 
                                               class="btn btn-sm btn-outline-info" title="Ver detalles">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@empleado.EmpleadoId" 
                                               class="btn btn-sm btn-outline-warning" title="Editar">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            @if (empleado.Activo)
                                            {
                                                <button type="button" class="btn btn-sm btn-outline-danger" 
                                                        onclick="toggleEstado(@empleado.EmpleadoId, false)" title="Desactivar">
                                                    <i class="fas fa-user-slash"></i>
                                                </button>
                                            }
                                            else
                                            {
                                                <button type="button" class="btn btn-sm btn-outline-success" 
                                                        onclick="toggleEstado(@empleado.EmpleadoId, true)" title="Activar">
                                                    <i class="fas fa-user-check"></i>
                                                </button>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-users-slash text-muted" style="font-size: 4rem;"></i>
                    <h4 class="text-muted mt-3">No se encontraron empleados</h4>
                    <p class="text-muted">No hay empleados que coincidan con los criterios de búsqueda.</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i>Agregar Primer Empleado
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<!-- Formulario para cambiar estado -->
<form id="toggleEstadoForm" method="post" asp-action="ToggleEstado" style="display: none;">
    <input type="hidden" id="empleadoId" name="id" />
    <input type="hidden" id="nuevoEstado" name="activo" />
</form>

@section Scripts {
    <script>
        function toggleEstado(empleadoId, nuevoEstado) {
            const accion = nuevoEstado ? 'activar' : 'desactivar';
            if (confirm(`¿Está seguro de ${accion} este empleado?`)) {
                document.getElementById('empleadoId').value = empleadoId;
                document.getElementById('nuevoEstado').value = nuevoEstado;
                document.getElementById('toggleEstadoForm').submit();
            }
        }
    </script>
}