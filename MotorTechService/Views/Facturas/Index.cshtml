@model IEnumerable<MotorTechService.Models.Entities.Factura>

@{
    ViewData["Title"] = "Gestión de Facturas";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex align-items-center justify-content-between mb-4">
                <div>
                    <h1 class="h3 mb-0 text-gray-800">
                        <i class="fas fa-file-invoice me-2"></i>@ViewData["Title"]
                    </h1>
                    <p class="mb-0 text-muted">Administración completa de facturas del taller</p>
                </div>
                <div class="d-flex gap-2">
                    <a asp-action="Reporte" class="btn btn-info">
                        <i class="fas fa-chart-line me-1"></i>Reportes
                    </a>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i>Nueva Factura
                    </a>
                </div>
            </div>

            <!-- Filtros y búsqueda -->
            <div class="card shadow mb-4">
                <div class="card-header">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-filter me-2"></i>Filtros de Búsqueda
                    </h6>
                </div>
                <div class="card-body">
                    <form method="get">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="numeroFactura">Número de Factura</label>
                                    <input type="text" name="numeroFactura" id="numeroFactura" 
                                           class="form-control" value="@ViewBag.NumeroFactura" 
                                           placeholder="Ej: FAC-001" />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="cliente">Cliente</label>
                                    <input type="text" name="cliente" id="cliente" 
                                           class="form-control" value="@ViewBag.Cliente" 
                                           placeholder="Nombre del cliente" />
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label for="estado">Estado</label>
                                    <select name="estado" id="estado" class="form-control">
                                        <option value="">Todos</option>
                                        <option value="Borrador">Borrador</option>
                                        <option value="Emitida">Emitida</option>
                                        <option value="Pagada">Pagada</option>
                                        <option value="Cancelada">Cancelada</option>
                                        <option value="Anulada">Anulada</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label for="fechaDesde">Fecha Desde</label>
                                    <input type="date" name="fechaDesde" id="fechaDesde" 
                                           class="form-control" value="@ViewBag.FechaDesde" />
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group d-flex flex-column">
                                    <label for="fechaHasta">Fecha Hasta</label>
                                    <input type="date" name="fechaHasta" id="fechaHasta" 
                                           class="form-control" value="@ViewBag.FechaHasta" />
                                </div>
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary me-2">
                                    <i class="fas fa-search me-1"></i>Buscar
                                </button>
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="fas fa-times me-1"></i>Limpiar
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Resumen estadísticas -->
            <div class="row mb-4">
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-primary shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                        Total Facturas</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Count()</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-file-invoice fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-success shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                        Total Facturado</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">
                                        $@Model.Sum(f => f.Total).ToString("N2")
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-warning shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                        Pendientes</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">
                                        @Model.Count(f => f.Estado == MotorTechService.Models.Entities.EstadoFactura.Emitida)
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-clock fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-info shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                        Pagadas</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">
                                        @Model.Count(f => f.Estado == MotorTechService.Models.Entities.EstadoFactura.Pagada)
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Tabla de facturas -->
            @if (Model.Any())
            {
                <div class="card shadow">
                    <div class="card-header">
                        <h6 class="m-0 font-weight-bold text-primary">
                            <i class="fas fa-table me-2"></i>Lista de Facturas
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Número</th>
                                        <th>Cliente</th>
                                        <th>Fecha Emisión</th>
                                        <th>Fecha Vencimiento</th>
                                        <th>Estado</th>
                                        <th>Subtotal</th>
                                        <th>Impuestos</th>
                                        <th>Total</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var factura in Model.OrderByDescending(f => f.FechaEmision))
                                    {
                                        <tr>
                                            <td>
                                                <strong>@factura.NumeroFactura</strong>
                                            </td>
                                            <td>
                                                <div>
                                                    <strong>@factura.Cliente?.Nombre @factura.Cliente?.Apellido</strong>
                                                    @if (!string.IsNullOrEmpty(factura.Cliente?.DocumentoIdentidad))
                                                    {
                                                        <br><small class="text-muted">@factura.Cliente.DocumentoIdentidad</small>
                                                    }
                                                </div>
                                            </td>
                                            <td>@factura.FechaEmision.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                @if (factura.FechaVencimiento.HasValue)
                                                {
                                                    @factura.FechaVencimiento.Value.ToString("dd/MM/yyyy")
                                                    @if (factura.FechaVencimiento < DateTime.Now && factura.Estado == MotorTechService.Models.Entities.EstadoFactura.Emitida)
                                                    {
                                                        <br><span class="badge badge-danger">Vencida</span>
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No aplica</span>
                                                }
                                            </td>
                                            <td>
                                                @{
                                                    var badgeClass = factura.Estado switch
                                                    {
                                                        MotorTechService.Models.Entities.EstadoFactura.Borrador => "secondary",
                                                        MotorTechService.Models.Entities.EstadoFactura.Emitida => "warning",
                                                        MotorTechService.Models.Entities.EstadoFactura.Pagada => "success",
                                                        MotorTechService.Models.Entities.EstadoFactura.Cancelada => "danger",
                                                        MotorTechService.Models.Entities.EstadoFactura.Anulada => "dark",
                                                        _ => "secondary"
                                                    };
                                                }
                                                <span class="badge badge-@badgeClass">
                                                    @factura.Estado
                                                </span>
                                            </td>
                                            <td>$@factura.SubTotal.ToString("N2")</td>
                                            <td>$@factura.Impuestos.ToString("N2")</td>
                                            <td>
                                                <strong>$@factura.Total.ToString("N2")</strong>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@factura.FacturaId" 
                                                       class="btn btn-info btn-sm" title="Ver Detalles">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    @if (factura.Estado == MotorTechService.Models.Entities.EstadoFactura.Borrador)
                                                    {
                                                        <a asp-action="Edit" asp-route-id="@factura.FacturaId" 
                                                           class="btn btn-warning btn-sm" title="Editar">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                    }
                                                    <a asp-action="GenerarPDF" asp-route-id="@factura.FacturaId" 
                                                       class="btn btn-danger btn-sm" title="Descargar PDF" target="_blank">
                                                        <i class="fas fa-file-pdf"></i>
                                                    </a>
                                                    @if (factura.Estado == MotorTechService.Models.Entities.EstadoFactura.Emitida)
                                                    {
                                                        <button type="button" class="btn btn-success btn-sm" 
                                                                onclick="marcarComoPagada(@factura.FacturaId)"
                                                                title="Marcar como Pagada">
                                                            <i class="fas fa-check"></i>
                                                        </button>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="card shadow">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-file-invoice fa-5x text-gray-300 mb-4"></i>
                        <h3>No hay facturas registradas</h3>
                        <p class="text-muted">Comience creando una nueva factura para gestionar las ventas del taller.</p>
                        <a asp-action="Create" class="btn btn-primary mt-3">
                            <i class="fas fa-plus me-2"></i>Crear Primera Factura
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Marcar factura como pagada
        function marcarComoPagada(facturaId) {
            if (confirm('¿Está seguro de marcar esta factura como pagada?')) {
                // Aquí iría la llamada AJAX para actualizar el estado
                $.post('@Url.Action("MarcarComoPagada")', { id: facturaId })
                    .done(function(response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            alert('Error: ' + response.message);
                        }
                    })
                    .fail(function() {
                        alert('Error al procesar la solicitud.');
                    });
            }
        }

        // Inicializar DataTable
        $(document).ready(function() {
            $('#dataTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Spanish.json"
                },
                "order": [[2, "desc"]], // Ordenar por fecha emisión descendente
                "pageLength": 25,
                "columnDefs": [
                    {
                        "targets": [5, 6, 7], // Columnas de montos
                        "className": "text-right"
                    },
                    {
                        "targets": [8], // Columna de acciones
                        "orderable": false
                    }
                ]
            });

            // Configurar valores seleccionados en los filtros
            var estadoActual = '@ViewBag.Estado';
            if (estadoActual) {
                $('#estado').val(estadoActual);
            }
        });
    </script>
}